    pushInsteadOf = "gh:"
[url "https://gitlab.com/"]
    insteadOf = "gl:"
[url "git@gitlab.com:"]
    pushInsteadOf = "gl:"

[init]
    defaultBranch = main
[gpg]
    program = gpg
[url "ssh://git@github.com/"]
    insteadOf = https://github.com/
[url "ssh://git@gitlab.com/"]
    insteadOf = https://gitlab.com/
[url "ssh://git@bitbucket.org/"]
    insteadOf = https://bitbucket.org/

